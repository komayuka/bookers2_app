<h2>User info</h2>
  <tbody>
     <% if current_user.profile_image == nil %>
     <p><%= image_tag 'no_image.jpeg' %></p>
     <% else %>
     <p><%= attachment_image_tag current_user, :profile_image,size: '60x60' %></p>
     <% end %>
     <table class="table">
      <tbody>
      <tr>
       <th>name</th>
       <th><%= current_user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= current_user.introduction %></th>
      </tr>
      </tbody>
      </table>
      <tr>
       <div class="row">
       <th><%= link_to edit_user_path(current_user.id), method: :get do %>
       </div>
       <button type="button" class="btn btn-outline-secondary btn-lg btn-block"><i class="fas fa-user-cog"></i></button>
       <% end %>
       </th>

<h2>New book</h2>
<%= form_with model: book, url:'/books', local:true do |f| %>


<div class="field">
 <%= f.label :title %><br />
 <%= f.text_field :title %>
</div>
<div class="field">
 <%= f.label :opinion %><br />
 <%= f.text_area :body %>
</div>
<div>
 <%= f.submit 'Create Book', class: "btn btn-success text-light" %>
</div>
<% end %>