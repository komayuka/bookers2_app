
<table>
  <% book.book_comments.each do |book_comment| %>
  <% book_comment_user = book_comment.user %>
<tr>
  <td>
  <% if current_user.profile_image == nil %>
    <%= image_tag 'no_image.jpg', size: '40x40' %></p>
  <% else %>
    <%= attachment_image_tag current_user, :profile_image, size: '40x40' %></p>
  <% end %>
  <%= link_to user_path(book_comment.user), class: "user_#{book_comment_user.id}" do %>
  <%= attachment_image_tag book_comment.user, :profile_image, size: '20x20', class:"attachment user profile_image fallback" %>
  <%= book_comment.user.name %>
  <% end %>
  </td>
  <td>
  <%= book_comment.comment %>
  </td>
  <% if current_user == book_comment_user %>
  <td>
    <%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), class: "btn btn-danger", method: :delete, remote: true %>
  </td>
  <% end %>
</tr>
<% end %>
</table>
 <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
 <%= f.text_area :comment %>
 <%= f.submit "送信" %>
 <% end %>




