<table>
<div id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">
  <%= @user.name %> さんとのチャット
</div>

<thead>
  <tr>
    <th><%= current_user.name %></th>
    <th><%= @user.name %></th>
  </tr>
</thead>

<% @chats.each do |chat| %>
<% if chat.user_is == cureent_user.id %>
<tbody>
  <tr>
    <th><%= chat.message %></th>
    <th></th>
  </tr>
</tbody>
<% else %>
<tbody>
  <tr>
    <td><%= chat.message %></td>
  </tr>
</tbody>
<% end %>
</table>

<%= form_with model: @chat do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
<% end %>
<% end %>