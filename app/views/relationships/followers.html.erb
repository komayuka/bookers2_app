<h2>Follower Users</h2>
<table class="table table-hover">
<tbody>
<% if @users.exists? %>
<thead>
  <tr>
    <th>name</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>フォロー数: <%= user.followings.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
    <td><%= link_to "Show", user %></td>
  </tr>
  <% end %>
</tbody>
<% else %>
 <th>ユーザーはいません</th>
 <% end %>
</tbody>
</table>