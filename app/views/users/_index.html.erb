
<table class="table table-hover">
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
  </tr>
 </thead>
 <tbody>
  <% users.each do |user| %>
  <tr>
   <td><%= attachment_image_tag(current_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40') %></td>
   <td><%= user.name %></td>
  </tr>
  <% end %>
 </tbody>
 </table>