<h2>New book</h2>
<%= form_with model: @user, local:true do |f| %>

<div class="field">
 <%= f.label :title %><br />
 <%= f.text_field :title %>
</div>
<div class="field">
 <%= f.label :opinion %><br />
 <%= f.text_area :body %>
</div>
<div>
 <%= f.submit 'Create Book' %>
</div>
<% end %>


