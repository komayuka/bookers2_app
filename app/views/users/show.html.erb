<body>
 <div>
 <h2>User info</h2>
  <tbody>
     <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback:"no_image.jpg" %></p>
      <tr>
       <th>name</th>
       <%= current_user.name %>
      </tr>
      <tr>
       <th>introduction</th>
       <%= current_user.introduction %>
      </tr>
      <tr>
       <th><%= link_to edit_user_path(current_user.id), method: :get do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       </th>
       </tr>
  </tbody>

</div>
</body>

<h2>New book</h2>
<%= form_with model: @user, local:true do |f| %>

<div class="field">
 <%= f.label :title %><br />
 <%= f.text_field :title %>
</div>
<div class="field">
 <%= f.label :opinion %><br />
 <%= f.text_area :opinion%>
</div>
<div>
 <%= f.submit 'Create Book' %>
</div>
<% end %>


<h2>Books</h2>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
</table>

